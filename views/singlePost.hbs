{{#if articles}}
    {{#each articles}}
        <div class = "full-article">
            <h1>{{this.[1]}}</h1>
            <small>Posted by {{this.[2]}} on {{this.[5]}}</small>
            <br><br><br>
            <p class="description"><h2>Description:</h2> <br> {{this.[3]}}</p>
            <br><br>
            <p class="content"><h2>Content:</h2> <br> {{this.[4]}}</p>
        </div>
    {{/each}}

    {{else}}
    
    {{>404}}

{{/if}}